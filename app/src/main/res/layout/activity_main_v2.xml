<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBeigeGreen">

    <TextView
        android:id="@+id/main_tq"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/peterbuilt"
        android:gravity="center"
        android:text="Today's Quotes"
        android:textColor="@color/colorBlack"
        android:textSize="45dp"
        android:layout_gravity="center"/>

    <View
        android:id="@+id/main_divisionline1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="@color/colorGray"
        android:background="@color/colorBeigeGreenWhite"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_main_requ"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/primerprintbold"
                    android:text="Today's Quote"
                    android:textColor="@color/colorBlack"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/ranquote"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="1.5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/primerprint"

                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <LinearLayout
                    android:id="@+id/main_love"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="4.3"
                    android:background="@drawable/background_main_requ"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackground"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/heart"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Love"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/primerprintbold"
                        android:textSize="23dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Views : "
                            android:textSize="14dp"
                            android:textColor="@color/colorGray"
                            android:fontFamily="@font/primerprintbold"/>

                        <TextView
                            android:id="@+id/viewcount_love"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray"
                            android:textSize="14dp"
                            android:fontFamily="@font/primerprintbold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1.4">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_study"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.3"
                    android:background="@drawable/background_main_requ"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/book"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Study"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/primerprintbold"
                        android:textSize="23dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Views : "
                            android:textSize="14dp"
                            android:textColor="@color/colorGray"
                            android:fontFamily="@font/primerprintbold"/>

                        <TextView
                            android:id="@+id/viewcount_study"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray"
                            android:textSize="14dp"
                            android:fontFamily="@font/primerprintbold"/>

                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="10"

                >

                <LinearLayout
                    android:id="@+id/main_success"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="4.3"
                    android:background="@drawable/background_main_requ"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/success"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Success"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/primerprintbold"
                        android:textSize="23dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Views : "
                            android:textSize="14dp"
                            android:textColor="@color/colorGray"
                            android:fontFamily="@font/primerprintbold"/>

                        <TextView
                            android:id="@+id/viewcount_success"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray"
                            android:textSize="14dp"
                            android:fontFamily="@font/primerprintbold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1.4">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_friendship"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.3"
                    android:background="@drawable/background_main_requ"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/hug"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friendship"
                        android:fontFamily="@font/primerprintbold"
                        android:textColor="@color/colorBlack"
                        android:textSize="23dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Views : "
                            android:textSize="14dp"
                            android:textColor="@color/colorGray"
                            android:fontFamily="@font/primerprintbold"/>

                        <TextView
                            android:id="@+id/viewcount_friendship"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray"
                            android:textSize="14dp"
                            android:fontFamily="@font/primerprintbold"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <LinearLayout
                    android:id="@+id/main_breakup"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="4.3"
                    android:background="@drawable/background_main_requ"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/heartbreak"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breakup"
                        android:fontFamily="@font/primerprintbold"
                        android:textColor="@color/colorBlack"
                        android:textSize="23dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Views : "
                            android:textSize="14dp"
                            android:textColor="@color/colorGray"
                            android:fontFamily="@font/primerprintbold"/>

                        <TextView
                            android:id="@+id/viewcount_breakup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray"
                            android:textSize="14dp"
                            android:fontFamily="@font/primerprintbold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1.4">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_effort"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.3"
                    android:background="@drawable/background_main_requ"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/brain"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Effort"
                        android:fontFamily="@font/primerprintbold"
                        android:textColor="@color/colorBlack"
                        android:textSize="23dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Views : "
                            android:textSize="14dp"
                            android:textColor="@color/colorGray"
                            android:fontFamily="@font/primerprintbold"/>

                        <TextView
                            android:id="@+id/viewcount_effort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray"
                            android:textSize="14dp"
                            android:fontFamily="@font/primerprintbold"/>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginBottom="30dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_weight="4.3"
                    android:background="@drawable/background_main_requ"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coming Soon"
                        android:fontFamily="@font/primerprintbold"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1.4">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="4.3"
                    android:background="@drawable/background_main_requ"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coming Soon"
                        android:fontFamily="@font/primerprintbold"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>



