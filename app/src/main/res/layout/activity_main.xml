<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBeigeGreen"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/main_tq"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/peterbuilt"
        android:gravity="center"
        android:text="Today's Quotes"
        android:textColor="@color/colorBlack"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/main_divisionline1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="676dp"
        android:background="@color/colorBeigeGreenWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_divisionline1">

            <LinearLayout
                android:id="@+id/main_rec_quo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/background"
                android:orientation="vertical"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/main_today_rec_quo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/primerprint"
                    android:text="Today's Quote"
                    android:textColor="@color/colorBlack"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/primerprint"
                    android:text="In youth we learn; in age we understand."
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_quo1"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@+id/main_rec_quo"
                app:layout_constraintTop_toBottomOf="@+id/main_rec_quo">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/heart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/primerprintbold"
                    android:text="Love"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_quo2"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@+id/main_rec_quo"
                app:layout_constraintTop_toBottomOf="@+id/main_rec_quo">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/book" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/primerprintbold"
                    android:text="Study"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_quo3"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@+id/main_quo1"
                app:layout_constraintTop_toBottomOf="@+id/main_quo1">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/success" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/primerprintbold"
                    android:text="Success"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_quo4"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@+id/main_quo2"
                app:layout_constraintTop_toBottomOf="@+id/main_quo2">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/hug" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/primerprintbold"
                    android:text="Friendship"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_quo5"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@+id/main_quo3"
                app:layout_constraintTop_toBottomOf="@+id/main_quo3">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/heartbreak" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/primerprintbold"
                    android:text="Breakup"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_quo6"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/background"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@+id/main_quo4"
                app:layout_constraintTop_toBottomOf="@+id/main_quo4">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/brain" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/primerprintbold"
                    android:text="Effort"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp" />

            </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>